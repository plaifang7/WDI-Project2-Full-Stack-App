<h1>Add New Dog</h1>

<form action="/users/{{userId}}/dog" method="POST">
  <div>
    <label for="name">Name</label>
    <input type="text" name="name" placeholder="Dog's name"/>
  </div>
  <div>
    <label for="image">Image</label>
    <input type="text" name="image" placeholder="Dog's Image"/>
  </div>
  <div>
    <label for="breed">Breed</label>
    <input type="text" name="breed" placeholder="Dog's Breed" />
  </div>
  <div>
    <label for="age">Age</label>
    <input type="text" name="age" placeholder="Dog's Age" />
  </div>
  <div>
    <label for="description">Description</label>
    <input type="text" name="desription" placeholder="Brief Description of your Dog" />
  </div>
  <button type="submit">Add Dog</button>
</form>